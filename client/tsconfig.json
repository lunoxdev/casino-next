{
  "compilerOptions": {
    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@stores/*": ["src/stores/*"],
      "@types/*": ["src/types/*"],
      "@styles/*": ["src/styles/*"]
    },

    /* MÃ³dulos y entorno */
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "bundler",
    "types": ["vite/client"],

    /* Salida (Vite ya maneja el bundling, no necesitas rootDir/outDir) */
    "sourceMap": true,
    "declaration": false,

    /* React */
    "jsx": "react-jsx",
    "isolatedModules": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
